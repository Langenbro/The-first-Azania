<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visitor Pass Issuance</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h3>Pending Visitor Pass Requests</h3>
    <table>
        <thead>
            <tr>
                <th>Visitor Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Request Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% visitorRequests.forEach(function(request) { %>
                <tr>
                    <td><%= request.first_name %> <%= request.last_name %></td>
                    <td><%= request.email %></td>
                    <td><%= request.phone_number %></td>
                    <td><%= request.requested_at %></td>
                    <td><%= request.status %></td>
                    <td>
                        <form action="/staff/issue-pass" method="POST">
                            <input type="hidden" name="visitorId" value="<%= request.id %>">
                            <button type="submit">Issue Pass</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>

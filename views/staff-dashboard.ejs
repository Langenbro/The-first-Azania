<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <!-- Include the header partial -->
    <%- include('partials/header') %>

    <div class="dashboard-container">
        <!-- Profile Widget -->
        <a href="/user/profile" class="medium-widget user-widget">
            <img src="/images/profile-placeholder.png" alt="Profile Picture" class="profile-pic">
            <h3><%= user.first_name %> <%= user.last_name %></h3>
            <p>Role: <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></p>
        </a>

        <!-- Staff Dashboard Widgets -->
        <a href="/staff/schedule-appointment" class="medium-widget staff-widget">
            <h3>Schedule Appointment</h3>
            <p>Efficiently schedule and manage appointments.</p>
        </a>
        <a href="/staff/time-sheets" class="medium-widget staff-widget">
            <h3>Time Sheets</h3>
            <p>Keep track of work hours and attendance.</p>
        </a>
    </div>
    <%- include('partials/footer') %>

</body>
</html>

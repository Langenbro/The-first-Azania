<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visitor Pass Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            text-align: center;
            padding-top: 50px;
        }
        .canvas-container {
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: inline-block;
        }
    </style>
</head>
<body>
    <h1>Visitor Pass Details</h1>
    <div class="canvas-container">
        <canvas id="passCanvas" width="400" height="300"></canvas>
    </div>

    <script>
        const visitorData = {
            name: '<%= visitor.name %>',
            event: '<%= visitor.event %>',
            staff: '<%= visitor.staff %>',
            startTime: new Date('<%= visitor.startTime %>').toLocaleString(),
            passcode: '<%= visitor.passcode %>'
        };

        const canvas = document.getElementById('passCanvas');
        const ctx = canvas.getContext('2d');

        ctx.fillStyle = "#f9f9f9";
        ctx.fillRect(0, 0, canvas.width, canvas.height);

        ctx.fillStyle = "#333";
        ctx.font = "20px Arial";
        ctx.fillText("Visitor Pass", 140, 40);

        ctx.font = "16px Arial";
        ctx.fillText("Name: " + visitorData.name, 20, 80);
        ctx.fillText("Event: " + visitorData.event, 20, 110);
        ctx.fillText("Staff Member: " + visitorData.staff, 20, 140);
        ctx.fillText("Start Time: " + visitorData.startTime, 20, 170);
        ctx.fillText("Passcode: " + visitorData.passcode, 20, 200);

        ctx.strokeStyle = "#333";
        ctx.lineWidth = 2;
        ctx.strokeRect(10, 10, canvas.width - 20, canvas.height - 20);
    </script>
</body>
</html>
